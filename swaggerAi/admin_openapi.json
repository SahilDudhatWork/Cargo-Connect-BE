      },
      "put": {
        "tags": ["Manage User"],
        "summary": "Update User",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "companyName": {
                    "type": "string",
                    "example": "Updated Company"
                  },
                  "contactName": {
                    "type": "string",
                    "example": "Jane Doe"
                  },
                  "contactNumber": {
                    "type": "integer",
                    "example": 1234567890
                  },
                  "email": {
                    "type": "string",
                    "example": "jane.doe@example.com"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User updated successfully",
            "content": {
              "application/json": {}
            }
          }
        }
      },
      "delete": {
        "tags": ["Manage User"],
        "summary": "Delete User",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "66bdc9e047167638dd7edae4"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User deleted successfully",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
